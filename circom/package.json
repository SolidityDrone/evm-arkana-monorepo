{
  "name": "evm-arkana-circom",
  "version": "1.0.0",
  "description": "Circom2 circuits for Arkana protocol",
  "scripts": {
    "build:poseidon2": "node lib/poseidon/generate_poseidon2.js",
    "build:lean-imt": "node lib/lean-imt-verify/generate_lean_imt_verify.js",
    "build:all": "npm run build:poseidon2 && npm run build:lean-imt",
    "compile:entry": "mkdir -p build/entry && circom main/entry/entry.circom --r1cs --wasm --sym --c --O2 -o build/entry/",
    "compile:deposit": "mkdir -p build/deposit && circom main/deposit/deposit.circom --r1cs --wasm --sym --c --O2 -o build/deposit/",
    "compile:withdraw": "mkdir -p build/withdraw && circom main/withdraw/withdraw.circom --r1cs --wasm --sym --c --O2 -o build/withdraw/",
    "compile:send": "mkdir -p build/send && circom main/send/send.circom --r1cs --wasm --sym --c --O2 -o build/send/",
    "compile:absorb_send": "mkdir -p build/absorb_send && circom main/absorb_send/absorb_send.circom --r1cs --wasm --sym --c --O2 -o build/absorb_send/",
    "compile:absorb_withdraw": "mkdir -p build/absorb_withdraw && circom main/absorb_withdraw/absorb_withdraw.circom --r1cs --wasm --sym --c --O2 -o build/absorb_withdraw/",
    "compile:all": "npm run compile:entry && npm run compile:deposit && npm run compile:withdraw && npm run compile:send && npm run compile:absorb_send && npm run compile:absorb_withdraw",
    "test:poseidon2": "node test/scripts/equivalence_test.js",
    "test:entry": "node test/scripts/test_entry.js",
    "test:deposit": "node test/scripts/test_entry_deposit_flow.js",
    "test:withdraw": "node test/scripts/test_entry_withdraw_flow.js",
    "test:send": "node test/scripts/test_entry_send_flow.js",
    "test:entry-deposit-flow": "node test/scripts/test_entry_deposit_flow.js",
    "test:entry-withdraw-flow": "node test/scripts/test_entry_withdraw_flow.js",
    "test:entry-send-flow": "node test/scripts/test_entry_send_flow.js",
    "test:absorb-send": "node test/scripts/test_absorb_send.js",
    "test:absorb-withdraw": "node test/scripts/test_absorb_withdraw.js",
    "prove:entry": "node test/scripts/generate_and_verify_entry_proof.js",
    "prove:all": "node test/scripts/generate_all_proofs.js",
    "test:all": "npm run test:poseidon2 && npm run test:entry && npm run test:deposit && npm run test:withdraw && npm run test:send",
    "test:all-standalone": "npm run test:poseidon2 && npm run test:entry",
    "test:all-flows": "npm run test:entry-deposit-flow && npm run test:entry-withdraw-flow && npm run test:entry-send-flow && npm run test:absorb-send && npm run test:absorb-withdraw",
    "clean": "rm -rf build/**/*.r1cs build/**/*.sym build/**/*.wasm build/**/*_cpp build/**/*_js test/**/*.r1cs test/**/*.sym test/**/*.wasm test/**/*_cpp test/**/*_js test/**/*.wtns test/**/*.zkey test/**/*.ptau",
    "clean:all": "npm run clean && rm -rf node_modules/.pnpm"
  },
  "devDependencies": {
    "circomlib": "^2.0.5",
    "snarkjs": "^0.7.0"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1"
  }
}